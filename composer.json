    "type": "flarum-extension",
    "license": "MIT",
    "authors": [
        {
            "name": "JameSupeReal",
            "email": "james@nodeloc.com",
            "homepage": "https://www.nodeloc.com/"
        },
        {
            "name": "NikoVonLas",
            "email": "niko@antiit.ru"
        }
    ],
    "support": {
